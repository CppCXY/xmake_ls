    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'xmake_ls'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=xmake_ls",
                    "--package=xmake_ls",
                ],
                "filter": {
                    "name": "xmake_ls",
                    "kind": "bin"
                }
            },
            "args": [
                "-c",
                "tcp",
                "--port",
                "5007",
                "--log-level",
                "debug"
            ],
            "cwd": "${workspaceFolder}"
        },
    ]
}
